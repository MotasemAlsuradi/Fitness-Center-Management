@model IEnumerable<Fitness_Center_Management.Models.Subscriptionplan>

@{
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Day                 
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
             </th>
            <th>
                Goals
             </th>
             <th>
                 Image
             </th>
            <th>
                Exercise routines
             </th>
            <th>
                Trainer Created
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripelineone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripelinetwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripelinethree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripelinefour)
            </td>
            <td>
                <img src=@Url.Content("~/Images/" + item.Descripelinefive)
                    asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advicetext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buttontext)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Planid">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>

@model Fitness_Center_Management.Models.Subscriptionplan

@{
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Create Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Class Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripelineone" class="control-label" placeholder="Just 3 Char Like: Sun">Day</label>
                <input asp-for="Descripelineone" class="form-control" />
                <span asp-validation-for="Descripelineone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripelinetwo" class="control-label" placeholder="9:00 AM">Start Time</label>
                <input asp-for="Descripelinetwo" class="form-control" />
                <span asp-validation-for="Descripelinetwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripelinethree" class="control-label" placeholder="10: AM">End Time</label>
                <input asp-for="Descripelinethree" class="form-control" />
                <span asp-validation-for="Descripelinethree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripelinefour" class="control-label">Goals</label>
                <input asp-for="Descripelinefour" class="form-control" />
                <span asp-validation-for="Descripelinefour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Image</label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Advicetext" class="control-label">Exercise routines</label>
                <input asp-for="Advicetext" class="form-control" />
                <span asp-validation-for="Advicetext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buttontext" class="control-label">Trainer Name</label>
                <input asp-for="Buttontext" class="form-control" />
                <span asp-validation-for="Buttontext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

</body>
</html>

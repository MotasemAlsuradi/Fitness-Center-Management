@model Fitness_Center_Management.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Fitness_Center</title>

    <!-- Favion-Image -->
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">

    <!--
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Fitness_Center.styles.css" asp-append-version="true" />
    -->
    <!-- Font: Roboto -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">

    <!-- CSS Frameworks (Bootstrap) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- CSS Frameworks (Toastr Lib) -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font-Awesome Lib -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<section class="py-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <!-- Image Section -->
            <div class="col-md-8 col-lg-6 col-xl-5 order-1 order-md-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>

            <!-- Form Section -->
            <div class="col-md-8 col-lg-6 col-xl-7 order-2 order-md-1">
                <form asp-action="Register" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start mb-4">
                        <p class="lead fw-normal mb-0 me-3">Sign up with</p>
                        <button type="button" data-mdb-button-init data-mdb-ripple-init
                                class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-facebook-f"></i>
                        </button>
                        <button type="button" data-mdb-button-init data-mdb-ripple-init
                                class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-twitter"></i>
                        </button>
                        <button type="button" data-mdb-button-init data-mdb-ripple-init
                                class="btn btn-primary btn-floating mx-1">
                            <i class="fab fa-linkedin-in"></i>
                        </button>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Or</p>
                    </div>

                    <!-- Fields -->
                    <div class="row mb-4">
                        <!-- First Name -->
                        <div class="col-md-6">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Firstname" class="form-control" placeholder="First Name" />
                                <label asp-for="Firstname" class="form-label">First Name</label>
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Last Name -->
                        <div class="col-md-6">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Lastname" class="form-control" placeholder="Last Name" />
                                <label asp-for="Lastname" class="form-label">Last Name</label>
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Email -->
                        <div class="col-md-12">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Email" class="form-control" placeholder="Email Address" />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <!-- Username -->
                        <div class="col-md-6">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Username" class="form-control" placeholder="Username" />
                                <label asp-for="Username" class="form-label">Username</label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Password -->
                        <div class="col-md-6">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Password" class="form-control" placeholder="Password" />
                                <label asp-for="Password" class="form-label">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <!-- Age -->
                        <div class="col-md-4">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Age" class="form-control" placeholder="Age" />
                                <label asp-for="Age" class="form-label">Age</label>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Phone -->
                        <div class="col-md-4">
                            <div data-mdb-input-init class="form-outline">
                                <input asp-for="Phonenumber" class="form-control" placeholder="Phone Number" />
                                <label asp-for="Phonenumber" class="form-label">Phone</label>
                                <span asp-validation-for="Phonenumber" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Gender -->
                        <div class="col-md-4">
                            <div data-mdb-input-init class="form-outline">
                                <select asp-for="Gender" class="form-select" required>
                                    <option value="" disabled selected>Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Image upload input -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label asp-for="PictureUrl" class="form-label">Choose a profile picture</label>
                            <input asp-for="PictureUrl" class="form-control" />
                            <span asp-validation-for="PictureUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Terms and submit button -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="" />
                            <label class="form-check-label" for="form2Example3">
                                I agree to the <a class="text-body"><u>Terms and Conditions</u></a>
                            </label>
                        </div>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Sign Up" data-mdb-button-init data-mdb-ripple-init
                               class="btn btn-log-reg btn-lg"
                               style="padding-left: 2.5rem; padding-right: 2.5rem;" />

                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Already have an account? <a asp-area="" asp-controller="Home" asp-action="Login" class="link-danger">Login</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


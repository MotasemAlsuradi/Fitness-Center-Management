@model IEnumerable<Fitness_Center_Management.Models.Maininformationoffitnesscenter>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fitness Center Information</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        .container-full {
            width: 100%;
            padding: 0 20px;
        }
        .row-container {
            border: 1px solid #ddd;
            padding: 0 20px;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        .label {
            font-weight: bold;
        }
        
        @@media (max-width: 768px) {
            .row-container {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid container-full">
        <div class="text-center mb-4">
            <h4>Fitness Center Information</h4>
        </div>

        <div class="d-flex flex-column">
            @foreach (var item in Model)
            {
                <div class="row-container row">
                    <!-- Column 1 -->
                    <div class="col-md-6">
                        <p><span class="label">Name:</span> @Html.DisplayFor(modelItem => item.Name)</p>
                        <p><span class="label">First About Text:</span> @Html.DisplayFor(modelItem => item.Firstabouttext)</p>
                        <p><span class="label">Second About Text:</span> @Html.DisplayFor(modelItem => item.Secoundabouttext)</p>
                        <p><span class="label">Third About Text:</span> @Html.DisplayFor(modelItem => item.Thirdabouttext)</p>
                        <p><span class="label">Open Day:</span> @Html.DisplayFor(modelItem => item.Openday)</p>
                        <p><span class="label">Closed Day:</span> @Html.DisplayFor(modelItem => item.Closedday)</p>
                        <p><span class="label">Work Time:</span> @Html.DisplayFor(modelItem => item.Worktime)</p>
                    </div>
                    <!-- Column 2 -->
                    <div class="col-md-6">
                        <p><span class="label">Testimonial Text:</span> @Html.DisplayFor(modelItem => item.Testamoinaltext)</p>
                        <p><span class="label">Welcome Location Text:</span> @Html.DisplayFor(modelItem => item.Welcomelocationtext)</p>
                        <p><span class="label">Location Text:</span> @Html.DisplayFor(modelItem => item.Locationtext)</p>
                        <p><span class="label">Location Source:</span> @Html.DisplayFor(modelItem => item.Locationsource)</p>
                        <p><span class="label">Copyright Text:</span> @Html.DisplayFor(modelItem => item.Copyrighttext)</p>
                        <p><span class="label">Email:</span> @Html.DisplayFor(modelItem => item.Email)</p>
                        <p><span class="label">Phone:</span> @Html.DisplayFor(modelItem => item.Phone)</p>
                        <p>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Maininformationoffitnesscenterid">Edit</a>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>

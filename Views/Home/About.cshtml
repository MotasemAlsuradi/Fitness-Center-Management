@model PagesViewModel

@{
    ViewData["Title"] = "About";
}

<!-- About-Section -->
<section id="about" class="about-section bg-secondary-subtle py-5">
    <div class="container rounded">
        <h1 class="mb-4 fw-bold">@Model.Maininformationoffitnesscenter.Name</h1>
        <p class="text-black fw-medium">
            @Model.Maininformationoffitnesscenter.Firstabouttext
            <br><br>
            @Model.Maininformationoffitnesscenter.Secoundabouttext
            <br><br>
            @Model.Maininformationoffitnesscenter.Thirdabouttext
            <br><br>
            At FitSphere, we also value community. Our members are part of a supportive and encouraging
            network that fosters growth, teamwork, and friendship. Whether you're working out solo or attending
            one of our group fitness classes, you’ll feel the energy and camaraderie that makes us different from
            any other gym.
            <br><br>
            We're here to empower you—no matter your age, background, or fitness level. Join us today
            and experience the FitSphere difference. Together, we'll work towards a healthier, stronger,
            and more confident version of you.
        </p>
    </div>
</section>

<!-- Trainer-Section -->
<section id="trainers" class="trainers bg-secondary-subtle">
    <div class="container">
        <h2 class="text-center mb-4">Meet Our Trainers</h2>
        <div class="row text-center">
        @foreach(var trainer in Model.Trainers){
            <!-- Trainer -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card trainer-card border-0">
                    <img src="@Url.Content("~/Images/" + trainer.Picture)" class="card-img-top trainer-img" alt="Trainer Picture">
                    <div class="card-body text-bg-dark p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="trainer-info text-start">
                                <h5 class="card-title">@trainer.Firstname @trainer.Lastname</h5>
                                <p class="card-text">@trainer.Expertise</p>
                            </div>
                            <div class="social-icons">
                                <a href="@trainer.Socialfacebook" target="_blank" class="social-icon"><i class="fab fa-facebook"></i></a>
                                <a href="@trainer.Sociallinkedin" target="_blank" class="social-icon"><i class="fab fa-instagram"></i></a>
                                <a href="@trainer.Socialtwitter"  target="_blank" class="social-icon"><i class="fab fa-twitter"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
</section>


@model PagesViewModel

@{
    ViewData["Title"] = "Home";
}

@if (TempData["MessageSuccess"] != null)
{
    <style>
        .toast-success {
            background-color: #006400 !important;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        Command: toastr["success"]("@TempData["MessageSuccess"]")

        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>
}

<!-- Landing-Section -->
<section class="landing text-light d-flex justify-content-center align-items-center">
    <div class="text-center">
        <p class="fs-5 text-secondary m-0">@Model.LandingSection.Firstwelcometext</p>
        <h1 class="mb-4">@Model.LandingSection.Secoundwelcometext</h1>
        <a asp-area="" asp-controller="Home" asp-action="Classes" class="getStarted text-decoration-none p-3">
            @Model.LandingSection.Firstbutton
        </a>
        <a asp-area="" asp-controller="Home" asp-action="About" class="learnMore text-decoration-none p-3">
            @Model.LandingSection.Secoundbutton
        </a>
    </div>
</section>

<!-- Features-Section -->
<section id="features" class="features text-light text-center d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4">
                <h2 class="mb-3">@Model.FeatureSection.Firstlefttext</h2>
                <h6 class="mb-3">@Model.FeatureSection.Secoundlefttext</h6>
                <p class="text-secondary">@Model.FeatureSection.Thirdlefttext</p>
            </div>
            <div class="col-lg-1 line"></div>
            <div class="col-lg-5 col-md-12 mb-4">
                <!-- From Main  -->
                <div class="working-hours">
                    <h2 class="mb-3">Working Hours</h2>
                    <p class="m-0"><strong class="d-block">@Model.Maininformationoffitnesscenter.Openday</strong></p>
                    <p class="mb-3 small">@Model.Maininformationoffitnesscenter.Worktime</p>
                    <p class="m-0"><strong>@Model.Maininformationoffitnesscenter.Closedday</strong> Closed</p>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col">
                <a class="btn" asp-area="" asp-controller="Home" asp-action="Classes">@Model.FeatureSection.Button</a>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial-Section -->
<section id="testimonials" class="testimonials text-light">
    <div class="container">
        <h2 class="text-center mb-4">@Model.Maininformationoffitnesscenter.Testamoinaltext</h2>
        <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
            <!-- Carousel Items -->
            <div class="carousel-inner">
                <!-- Testimonial 1 -->
                <div class="carousel-item active">
                    <div class="row align-items-center">
                        <!-- Testimonial Text -->
                        <div class="col-md-8 text-start">
                            <p class="fs-4 mb-3">
                                "Joining FitSphere was the best decision ever! I've never felt
                                healthier and stronger."
                            </p>
                        </div>
                        <!-- Person's Card -->
                        <div class="col-md-4 text-center">
                            <img src="images/main-bg.jpeg" class="rounded-circle mb-2" alt="Person 1"
                                 style="width: 100px; height: 100px;">
                            <h6 class="mb-0">John D.</h6>
                            <p class="small">Member since 2021</p>
                        </div>
                    </div>
                </div>

                <!-- Testimonial 2 -->
                <div class="carousel-item">
                    <div class="row align-items-center">
                        <!-- Testimonial Text -->
                        <div class="col-md-8 text-start">
                            <p class="fs-4 mb-3">"The trainers are amazing, and the facilities are top-notch!"</p>
                        </div>
                        <!-- Person's Card -->
                        <div class="col-md-4 text-center">
                            <img src="images/main-bg.jpeg" class="rounded-circle mb-2" alt="Person 2"
                                 style="width: 100px; height: 100px;">
                            <h6 class="mb-0">Mune W.</h6>
                            <p class="small">Member since 2022</p>
                        </div>
                    </div>
                </div>

                <!-- Testimonial 3 -->
                <div class="carousel-item">
                    <div class="row align-items-center">
                        <!-- Testimonial Text -->
                        <div class="col-md-8 text-start">
                            <p class="fs-4 mb-3">"The trainers are amazing, and the facilities are top-notch!"</p>
                        </div>
                        <!-- Person's Card -->
                        <div class="col-md-4 text-center">
                            <img src="images/main-bg.jpeg" class="rounded-circle mb-2" alt="Person 2"
                                 style="width: 100px; height: 100px;">
                            <h6 class="mb-0">Sarah W.</h6>
                            <p class="small">Member since 2020</p>
                        </div>
                    </div>
                </div>

                <!-- Custom Carousel Controls (Below) -->
                <div class="carousel-controls text-center">
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel"
                            data-bs-slide="prev" aria-label="Previous">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel"
                            data-bs-slide="next" aria-label="Next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Blog Section -->
<section id="blog" class="blog bg-secondary-subtle py-5">
    <div class="container">
        <h2 class="text-center text-dark mb-5">Fitness Tips & Articles</h2>
        <div class="row">
            @foreach (var blog in Model.BlogSections)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card bg-dark text-white p-3 my-1">
                        <div class="card-body">
                            <h5 class="card-title">@blog.Tiptitle</h5>
                            <p class="card-text text-secondary">@blog.Firsttiptext</p>
                            <p class="card-text text-secondary">@blog.Secoundtiptext</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Contact & Location - Section -->
<section id="contact" class="contact text-light py-5">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <h2 class="text-center my-4">Feel Free To Ask Any Question</h2>
                <form asp-action="SubmitMessage" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                    </div> 
                    <button type="submit" class="btn">Send Message</button>
                </form>
            </div>

            <div class="col-md-6 line">
                <div class="row">
                    <h2 class="text-center my-4">@Model.Maininformationoffitnesscenter.Welcomelocationtext</h2>
                    <div class="mb-3">
                        <h4>
                            <i class="fa-solid fa-location-dot"></i>
                            @Model.Maininformationoffitnesscenter.Locationtext
                        </h4>
                    </div>
                </div>
                <div class="row mt-4">
                    <iframe src="@Url.Content(Model.Maininformationoffitnesscenter.Locationsource)"
                            width="600" height="150" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>